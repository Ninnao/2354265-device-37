      let button = document.getElementById("button");
          button.onclick = button_click;

      function button_click() {
        let myDetails = document.getElementById("list");
        myDetails.open = !myDetails.open;
        button.textContent = button.textContent === "Открыть" ? "Закрыть" : "Открыть";
      }

