      document.querySelector('.open-modal').addEventListener('click', ()=> {
        document.querySelector('.modal-container').style.display = "flex";
      });


     document.querySelector('.modal-closed-button').addEventListener('click', ()=> {
        document.querySelector('.modal-container').style.display = "none";
      });



      document.querySelector('.button-open-catalog').addEventListener('click', ()=> {
        document.querySelector('.catalog-list').style.display = "flex";
      });


     document.querySelector('.button-closed-catalog').addEventListener('click', ()=> {
        document.querySelector('.catalog-list').style.display = "none";
      });

